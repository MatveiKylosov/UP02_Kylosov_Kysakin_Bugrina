<Page x:Class="UP02.Pages.Main.PageSoftware"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="PageSoftware">
    <Grid>
        <TextBox x:Name="SearchField" Height="25" Margin="10,10,360,5" VerticalAlignment="Top"/>
        <Button Content="Поиск" Height="25" Width="100" Margin="0,10,255,5" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Search_Click"/>
        <Button Content="Добавить запись" Height="25" Width="100" Margin="0,10,15,5"  VerticalAlignment="Top" HorizontalAlignment="Right" Click="AddNewRecord_Click"/>
        <StackPanel Orientation="Horizontal" Height="50" Margin="5,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Margin="5">
                <TextBlock Text="Разработчик" Foreground="White"/>
                <ComboBox x:Name="DevelopersCB" SelectionChanged="SortCB_Changed"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Оборудование" Foreground="White"/>
                <ComboBox x:Name="EquipmentsCB" SelectionChanged="SortCB_Changed"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Margin="0,105,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentPanel" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</Page>